<resources>
    <!-- Base application theme. -->
    <style name="Theme.Hechim" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white_100</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/gray_200</item>
        <item name="colorOnPrimarySurface">@color/black_400</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange_400</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white_100</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/roboto</item>



    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxStrokeColor">#152D4A</item>
        <item name="android:textColor">#152D4A</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="hintTextColor">#171819</item>
        <item name="android:textColorHint">#152D4A</item>
    </style>

    <style name="roundedImageViewRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="Base.AppTheme.notification.title" parent="TextAppearance.Compat.Notification.Title">
        <item name="android:textColor"> @color/black_400</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Base.AppTheme.notification.desc" parent="TextAppearance.Compat.Notification.Title">
        <item name="android:textColor"> @color/black_400</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>